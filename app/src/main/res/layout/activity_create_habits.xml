<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.habits.CreateHabitsActivity">

    <include
        android:id="@+id/include"
        layout="@layout/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:isScrollContainer="true"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-condensed"
            android:text="¿Cuál habito deseas crear?"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="sans-serif-condensed"
            android:text="PRODUCTIVIDAD"
            android:textColor="@color/green1"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="16dp"
            android:background="@color/green1" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/timeControlButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/green3"
            android:fontFamily="sans-serif-black"
            android:text="Control de Tiempo"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold"
            app:icon="@drawable/baseline_access_time_filled_24"
            app:iconSize="30sp"
            app:iconTint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="sans-serif-condensed"
            android:text="SALUD"
            android:textColor="@color/green1"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="16dp"
            android:background="@color/green1" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/dailyStepsCreation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/green3"
            android:fontFamily="sans-serif-black"
            android:text="Pasos diarios"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold"
            app:icon="@drawable/stepscreate"
            app:iconSize="30sp"
            app:iconTint="@color/white" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/musculationCreationHabit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/green3"
            android:fontFamily="sans-serif-black"
            android:text="Musculación"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold"
            app:icon="@drawable/muscle_logo"
            app:iconSize="30sp"
            app:iconTint="@color/white" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/runHabitCreateButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/green3"
            android:fontFamily="sans-serif-black"
            android:text="Correr"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold"
            app:icon="@drawable/foot"
            app:iconSize="30sp"
            app:iconTint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="sans-serif-condensed"
            android:text="OTRO"
            android:textColor="@color/green1"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="16dp"
            android:background="@color/green1" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/featuredHabitCreation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="30dp"
            android:backgroundTint="@color/green3"
            android:fontFamily="sans-serif-black"
            android:text="Personalizado"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold"
            app:icon="@drawable/pencil"
            app:iconSize="30sp"
            app:iconTint="@color/white" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>