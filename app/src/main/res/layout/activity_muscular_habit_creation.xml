<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.habits.creation.MuscularHabitCreationActivity">

    <include
            android:id="@+id/include"
            layout="@layout/header_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:isScrollContainer="true"
                    android:paddingBottom="50dp"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Creando habito musculatura"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/muscle_logo" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="40dp"
                        android:layout_marginBottom="32dp"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:text="@string/strength_habit_description"
                        android:textSize="15sp" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Nombre"
                        android:textColor="@color/green1"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                <EditText
                        android:id="@+id/mhName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginBottom="25dp"
                        android:background="@drawable/round_corner"
                        android:ems="10"
                        android:hint="Nombre del habito ej. Entrenar"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text="" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Grupo Muscular"
                        android:textColor="@color/green1"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                <EditText
                        android:id="@+id/mhMuscularGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginBottom="25dp"
                        android:background="@drawable/round_corner"
                        android:ems="10"
                        android:hint="Nombre del grupo muscular ej. Biceps"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text="" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Â¿Que dias lo vas a hacer?"
                        android:textColor="@color/green1"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="25dp"
                        android:isScrollContainer="true"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/mhDay0"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:background="@color/gray"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="L"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/mhDay1"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:background="@color/gray"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="M"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/mhDay2"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:background="@color/gray"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="X"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/mhDay3"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:background="@color/gray"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="J"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/mhDay4"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:background="@color/gray"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="V"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/mhDay5"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:background="@color/gray"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="S"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/mhDay6"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:background="@color/gray"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="D"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                </LinearLayout>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Hora de recordatorio"
                        android:textColor="@color/green1"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                <EditText
                        android:id="@+id/mhTimePick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginBottom="25dp"
                        android:background="@drawable/round_corner"
                        android:ems="10"
                        android:hint="Elegir hora"
                        android:inputType="text"
                        android:padding="10dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:text="" />


            </LinearLayout>
        </ScrollView>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/btn_crear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="15dp"
                android:backgroundTint="@color/green1"
                android:contentDescription="Guardar"
                android:text="Guardar"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:icon="@drawable/save"
                app:iconSize="40sp"
                app:iconTint="@color/white" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>