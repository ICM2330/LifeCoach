<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DashBoardHabitsActivity">

    <include
        android:id="@+id/include"
        layout="@layout/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationViewCreate"
        style="@style/BottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="416dp"
        android:layout_height="99dp"
        android:layout_marginTop="32dp"
        android:background="#C7ECC3"
        android:padding="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <ImageButton
            android:id="@+id/buttonStepsDashboardButton"
            android:layout_width="44dp"
            android:layout_height="39dp"
            android:layout_marginStart="305dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="45dp"
            android:backgroundTint="#C7ECC3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/stepsdashboard"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:layout_width="52dp"
            android:layout_height="20dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="20dp"
            android:text="Amigos"
            android:textAlignment="center"
            android:textColor="#18671B"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.623"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonStepsDashboardButton" />

        <TextView
            android:id="@+id/streakText"
            android:layout_width="54dp"
            android:layout_height="31dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="15dp"
            android:text="Racha"
            android:textAlignment="center"
            android:textColor="#18671B"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.365"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonStepsDashboardButton" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="73dp"
            android:layout_height="26dp"
            android:layout_marginStart="303dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="40dp"
            android:text="Monitoreo de pasos"
            android:textAlignment="center"
            android:textColor="#18671B"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonStepsDashboardButton" />

        <ImageButton
            android:id="@+id/buttonFriendsDashboard"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:layout_marginStart="213dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="#C7ECC3"
            app:layout_constraintEnd_toStartOf="@+id/buttonStepsDashboardButton"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/friendsdashboard"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/streakText"
            app:layout_constraintEnd_toStartOf="@+id/buttonFriendsDashboard"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/streaksdashboard" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/juanfrapp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textGreetingDashboard"
        android:layout_width="163dp"
        android:layout_height="19dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="210dp"
        android:text="Hola de nuevo, "
        android:textColor="#19701C"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="86dp"
        android:layout_height="22dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="165dp"
        android:fontFamily="sans-serif-black"
        android:text="Mis hábitos"
        android:textColor="#19701C"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="115dp"
        android:layout_height="108dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="148dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18"
        android:src="@drawable/healthylife" />

    <ListView
        android:id="@+id/habitsListView"
        android:layout_width="413dp"
        android:layout_height="178dp"
        android:layout_marginTop="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView13" >
    </ListView>


    <Button
        android:id="@+id/createHabitButton"
        android:layout_width="197dp"
        android:layout_height="47dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="22dp"
        android:backgroundTint="#1A781E"
        android:text="Crear Hábito"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationViewCreate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/habitsListView"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="37dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/createHabitButton"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="@+id/createHabitButton"
        app:layout_constraintTop_toTopOf="@+id/createHabitButton"
        android:src="@drawable/pencildashboard" />


</androidx.constraintlayout.widget.ConstraintLayout>