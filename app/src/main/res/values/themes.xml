<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LifeCoach_" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name = "backgroundColor">@color/green1</item>
        <item name="colorPrimary">@color/green1</item>
        <item name="colorAccent">@color/green1</item>
        <item name="colorSecondaryContainer">@color/gray</item>
        <item name="colorSurfaceBright">@color/lightbg</item>
        <item name="textColorValue">@color/black</item>
        <item name="bggreen">@color/green2</item>
    </style>

    <style name="BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/green1</item>
        <item name="itemIconTint">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.LifeCoach_" parent="Base.Theme.LifeCoach_" />
    
    <style name="TextBoxStyle" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="background">@color/green1</item>
    </style>

    <style name="Base.Theme.LifeCoachDarkTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="background">@color/black</item>
        <item name="android:background">@color/black</item>
        <item name="backgroundColor">@color/black</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorSecondaryContainer">@color/black</item>
        <item name="colorSurfaceBright">@color/black</item>
        <item name="textColorValue">@color/white</item>
        <item name="bggreen">@color/green1</item>
    </style>
</resources>